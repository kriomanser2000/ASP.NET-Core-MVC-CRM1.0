@{
    ViewData["Title"] = "Home Page";
}

<h1>
    here text some hell yeah wth
</h1>
@if (SignInManager.IsSignedIn(User))
{
    <div>
        <p>Ви увійшли як @User.Identity.Name</p>
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post">
            <button type="submit" class="nav-link btn btn-link">Вийти</button>
        </form>
    </div>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Зареєструватися</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Увійти</a>
        </li>
    </ul>
}